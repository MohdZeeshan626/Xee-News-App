<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".NewsDeatileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xee News App"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:padding="4dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:gravity="center"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/idReadBtn"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/idIVNews2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="3dp"
                android:background="@color/grey"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:id="@+id/idTVTitle"
                android:layout_below="@+id/idIVNews2"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:padding="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_description"
                android:textSize="5sp"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:id="@+id/idTVSubDescription"
                android:layout_below="@+id/idTVTitle"/>

            <TextView
                android:id="@+id/idTVContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTVSubDescription"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:lines="15"
                android:padding="4dp"
                android:text="@string/content"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTVContent"
                android:text="If you want full info.. clicking on Read Full News Button"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/yellow"
                android:textSize="25dp"




                />


        </RelativeLayout>


    </ScrollView>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idReadBtn"
    android:text="@string/read_full_news"
    app:background="@color/yellow"
    android:backgroundTint="@color/yellow"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:layout_alignParentBottom="true"
    android:textAllCaps="false"
    />


    <WebView
        android:id="@+id/web"
        android:layout_below="@id/toolbar"
        android:textAlignment="center"
        android:background="@color/black_shade_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

</RelativeLayout>